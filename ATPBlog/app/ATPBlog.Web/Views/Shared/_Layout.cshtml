<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/blogPost.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/dateFormat.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/encoder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/maxlength.js")" type="text/javascript"></script>

</head>
<body>
    <div class="page">
        <div id="mainContent">
            <div class="columnsContainer">
                <div class="leftColumn">
                    <p>
                        <img src=@Url.Content("~/Content/Images/sharp_arch.jpg") />
                    </p>
                    <h2>
                        ATP Blog Coding Exercise</h2>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Exercise Description</a></li>
                        <li><a href="@Url.Action("Index", "BlogPost")">Answer to exercise</a></li>
                    </ul>
                </div>
                <div class="rightColumn">
                    @RenderBody()
                </div>
                <div class="clear">
                </div>
            </div>
            <div id="sharpArchLogo">
                <img src=@Url.Content("~/Content/Images/sharp_arch_small.gif") />
            </div>
        </div>
</body>
</html>
